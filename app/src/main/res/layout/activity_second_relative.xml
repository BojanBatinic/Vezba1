<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ImageView displays an arbitrary image, such as an icon. -->
    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- TextView displays text to the user. -->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_image"/>

    <!-- TextView displays text to the user. -->
    <TextView
        android:id="@+id/tv_biografija"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_image"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_name"
        android:gravity="right"/>

    <!-- Spinners provide a quick way to select one value from a set. -->
    <Spinner
        android:id="@+id/sp_film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_image"
        android:layout_alignParentLeft="true"/>

    <RatingBar
        android:id="@+id/rb_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:layout_below="@id/sp_film"
        android:layout_alignParentRight="true"/>

    <!-- Button can be pressed, or clicked, by the user to perform an action. -->
    <Button
        android:id="@+id/btn_like"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/rb_rating"
        android:layout_centerHorizontal="true"
        android:text="@string/fragment_detail_button_like" />


</RelativeLayout>